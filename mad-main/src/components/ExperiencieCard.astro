---
interface Props {
	title: string
	description: string
	icon: string
	date: string
	location: string
}

const { title, description, icon, date, location } = Astro.props as Props
---

<article class="flex flex-row gap-4 items-start ">
	<picture class="w-20 h-16 bg-slate-300 rounded-lg flex items-center justify-center ">
		<img src={icon} alt={title} />
	</picture>
	<div class="flex flex-col gap-1 text-slate-500">
		<h2 class="font-semibold text-lg  text-zinc-950">{title}</h2>
		<p>{description}</p>
		<div class="flex flex-row gap-4">
			<time>{date}</time>
			<span>{location}</span>
		</div>
	</div>
</article>
