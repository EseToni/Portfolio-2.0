---
interface Props {
	title: string
	description: string
	icon: string
	date: string
	location: string
}

const { title, description, icon, date, location } = Astro.props as Props
---

<article class="flex flex-row gap-4 items-start cursor-default ">
	<picture class="w-20 h-16 bg-[#E8EDF2] rounded-lg flex items-center justify-center ">
		<img src={icon} alt={title} />
	</picture>
	<div class="flex flex-col gap-1 text-[#4F7396] text-wrap">
		<h2 class="font-semibold text-lg  text-[#0D141C] ">{title}</h2>
		<p class="font-normal">{description}</p>
		<div class="flex flex-row gap-4">
			<time>{date}</time>
			<span>{location}</span>
		</div>
	</div>
</article>
